{
    "name": "triplea/triplea-payment-gateway-for-woocommerce",
    "description": "This is a short description of what plugin_title does.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+-or-later",
    "authors": [
        {
            "name": "TripleA",
            "email": "andy.hoebeke@triple-a.io"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "process-timeout": 0
    },
    "repositories": [
        {
            "url": "https://github.com/WordPress/wordpress-develop",
            "type": "git"
        },
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.2",
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "wp-coding-standards/wpcs": "*",
        "wordpress/wordpress": "^5.4",
        "kporras07/composer-symlinks": "dev-master",
        "wpackagist-plugin/woocommerce": "^4.1",
        "wpackagist-theme/storefront": "*"
    },
    "extra": {
        "symlinks": {
            "wp-content": "vendor/wordpress/wordpress/build/wp-content",
            "wp-content/plugins": "vendor/wordpress/wordpress/src/wp-content/plugins",
            "src": "wp-content/plugins/triplea-payment-gateway-for-woocommerce",
            "vendor/wordpress/wordpress/src": "wordpress"
        },
    },
    "scripts": {
        "post-install-cmd": [
            "rm vendor/wordpress/wordpress/build/wp-content || true",
            "cd vendor/wordpress/wordpress; npm install; npm run build; cd ../../..",
            "Kporras07\\ComposerSymlinks\\ScriptHandler::createSymlinks",
            "mkdir -p wordpress/wp-content/uploads",
            "BrianHenryIE\\ComposerPhpStorm\\ExcludeFolders::update",
        ],
        "post-update-cmd": [
            "rm vendor/wordpress/wordpress/build/wp-content || true",
            "cd vendor/wordpress/wordpress; npm install; npm run build; cd ../../..",
            "Kporras07\\ComposerSymlinks\\ScriptHandler::createSymlinks",
            "mkdir -p wordpress/wp-content/uploads",
        ]
    }
}
